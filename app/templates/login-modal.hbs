{{#my-modal title='login' ok='authenticate' close='removeModal'}}
  <form {{action 'authenticate' on='submit' target=view}}>
    <div class="form-group">
      <label>Email</label>
      {{input class="form-control" value=identification name="email" type="text"}}
    </div>
    <div class="form-group">
      <label>Password</label>
      {{input class="form-control" value=password type="password" name="password"}}
    </div>
  </form>
{{/my-modal}}
